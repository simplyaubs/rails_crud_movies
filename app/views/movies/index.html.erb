<%= form_for @movie do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
  <p>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.submit 'Add movie' %>
  </p>
<% end %>

<%= @movies.each do |movie| %>
<ul>
  <li>
    <%= link_to "#{movie.title}", movie_path(movie) %>, <%= movie.rating %>
  </li>
</ul>
<% end %>